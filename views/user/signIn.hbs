<div>
  <section class="ftco-section">
    <div class="container border rounded">
      <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-2">
          <h2 class="heading-section text-success">Hello!</h2>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
          <div class="login-wrap p-4 p-md-5">
            <div class="d-flex">
              <div class="w-100">
                <h3 class="mb-4">Sign In</h3>
              </div>

            </div>
            <form action="/signin" method="post" class="login-form">
              {{#if incorectEOP}}
                <h4 class="text-danger">incorect email or password</h4>
              {{/if}}
              {{#if invUsr}}
                <h4 class="text-danger">create an account</h4>
              {{/if}}

              <div class="form-group">
                <input
                  type="email"
                  class="form-control rounded-left"
                  name="email"
                  id="email"
                  placeholder="email"
                  required
                />
                <span class="text-danger" id="emailErrorMsg" ></span>
              </div>
              <div class="form-group">

                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control rounded-left"
                  placeholder="Password"
                  required
                />
                 <span class="text-danger" id="passwordErrorMsg" ></span>
              </div>
              <div class="form-group d-flex align-items-center">
                <div class="w-100">
                  <label class="checkbox-wrap checkbox-primary mb-0">Save
                    Password
                    <input type="checkbox" checked />
                    <span class="checkmark"></span>
                  </label>
                </div>
                <div class="w-100 d-flex justify-content-end">

                  <input
                    type="submit"
                    value="Login"
                    class="btn btn-primary rounded submit"
                  />
                </div>
              </div>
              <div class="form-group mt-4">
                <div class="w-100 text-center">
                  <p class="mb-1">Don't have an account?
                    <a href="/signup">Sign Up</a></p>
                  <p><a href="/forgotpassword">Forgot Password</a></p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>

<script>
  document.addEventListener("DOMContentLoaded",()=>{

    const email = document.getElementById("email")
    const password = document.getElementById("password")

    const emailErrorMsg = document.getElementById("emailErrorMsg")
    const passwordErrorMsg = document.getElementById("passwordErrorMsg")

    form.addEventListener("submit",(e) =>{
      if(email.value === "" || email.value === null){
        e.preventDefaul()
        emailErrorMsg.innerHTML = "email required"
      }
      if(password.value === "" || password.value === null){
        e.preventDefaul()
        passwordErrorMsg.innerHTML = "password required"
      }
    })

  })
</script>
