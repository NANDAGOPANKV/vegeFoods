  <script>

// item remove 
 const itemsRemoveFunc = function(id){
  console.log(id);
  $.ajax({
    url: "/removeitemwishlist",
    method: "post",
    data: {
      id: id
    }
  }).done((val) => {
    console.log(val);
    // Remove the corresponding element from the DOM
    $(`#${id}`).remove();
    // Display the success message
    Swal.fire({
      position: 'top-end',
      icon: 'success',
      title: val.message,
      showConfirmButton: false,
      timer: 1750
    });
  });
}


