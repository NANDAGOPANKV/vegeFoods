 <script>
  // remove item from cart
  const removeItemCart = function(id){
    console.log(id)
    $.ajax({
      url:"/removeitemcart",
      method:"post",
      data:{
        id:id
      }
    }).done((val)=>{
      console.log(val)
      // remove item
      $(`#${id}`).remove();
       Swal.fire({
        position: 'top-end',
        icon: 'success',
        title:val?.message,
        showConfirmButton: false,
        timer: 1500
    })
    })
    }
       // ----------------------------------increment-----------------------------------------------//
     const decrement = function(id){
      $.ajax({
        url: '/pdecriment',
        method: 'patch',
        data:{
          id: id
        }
      }).done(function(value) {
        if(value.findQuantity.quantity==1){
          Swal.fire({
          position: 'top-end',
          icon: 'error',
          title: 'Must Have 1 Stock',
          text: 'You Must Need Minimum 1 Stock On Your Cart',         
          showConfirmButton: false,
          timer: 1950
          })
        }
        $('#input_'+id).val(value.findQuantity.quantity)
        $("#grandTotal").text(value.grandTotal)
        $("#tot_"+id).text(value.findQuantity.totalPrice)
        $("#subTot").text(value.allPrice)
      }).fail(function(jqXHR, textStatus, errorThrown) {
        console.error('Error:', textStatus, errorThrown);
      });
     }
     

     // ----------------------------------increment-----------------------------------------------//
     const increment = function(id){
      $.ajax({
        url: '/pincrement',
        method: 'patch',
        data: {
          id: id
        }
      }).done(function(value) {
        $('#input_'+id).val(value.findQuantity.quantity);
        $("#tot_"+id).text(value.findQuantity.totalPrice)
         $("#subTot").text(value.allPrice)
        $("#grandTotal").text(value.grandTotal)
        if(value.findQuantity.quantity==value.Products.stock){
          Swal.fire({
          position: 'top-end',
          icon: 'error',
          text: 'We Are extremely Sorry, We Will Add More Stocks Soon',
          showConfirmButton: false,
          timer: 1950
          })
        }
      })
     }
 
     // ----------------------------------proceed to checkout-----------------------------------------------//
     const proceedPay = function(total,Subtotal,Delivery){
      $.ajax({
        url:"/checkoutpost",
        method:"post",
        data:{
          total:total,
          subTotal:Subtotal,
          delCost:Delivery
        }
      }).done((val)=>{
         window.location.href = "/checkout";
      })

     } 
      
</script>
