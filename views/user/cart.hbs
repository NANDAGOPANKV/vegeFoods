  <section class="ftco-section ftco-cart">
    <div class="container">
      <div class="row">
        <div class="col-md-12 ftco-animate">
          <div class="cart-list">
            <table class="table">
              <thead class="thead-primary">
                <tr class="text-center">
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
                  <th>Product name</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                {{#if emptyCart}}
                  <div>
                    <span>your cart is empty</span>
                    <h6>click add button to add products to the cart</h6>
                    <a href="/shop">shop</a>
                    <button></button>
                  </div>
                {{else}}
                  {{#each products}}
                    <tr class="text-center" id="{{productId._id}}">
                      <td class="product-remove"><a
                      onclick="removeItemCart('{{productId._id}}')"
                       {{!-- href="/removeitemcart?id={{productId._id}}" --}}
                       ><span
                            class="ion-ios-close"
                          ></span></a></td>

                      <td class="image-prod"><div><img
                            class="img rounded"
                            src="/productImage/{{productId.image.[0]}}"
                            alt="Colorlib Template"
                          /></div></td>

                      <td class="product-name">
                        <h3>{{productId.name}}</h3>
                        <p>{{productId.description}}</p>
                      </td>
                      <td class="price">&#x20B9;{{price}}</td>
                       <td class="quantity">
                         
                        <div class="input-group mb-3">
                  <div class="input-group">
  <button onclick="decrement('{{productId._id}}')" class="btn btn-primary p-2">-</button>
  <input id="input_{{productId._id}}" type="number" name="quantity" class="quantity form-control input-number" value="{{quantity}}" min="1" />
  <button onclick="increment('{{productId._id}}')" class="btn btn-primary p-2">+</button>
</div>
                        </div> 
                      </td>
                      <td id="tot_{{productId._id}}" class="total">&#x20B9;{{totalPrice}}</td>
                    </tr><!-- END TR-->
                  {{/each}}

                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row justify-content-end">
        <div class="col-lg-4 mt-5 cart-wrap ftco-animate">
          <div class="cart-total mb-3">
            <h3>Coupon Code</h3>
            <p>Enter your coupon code if you have one</p>
            <form action="#" class="info">
              <div class="form-group">
                <label for="">Coupon code</label>
                <input
                  type="text"
                  class="form-control text-left px-3"
                  placeholder=""
                />
              </div>
            </form>
          </div>
          <p><a href="checkout.html" class="btn btn-primary py-3 px-4">Apply
              Coupon</a></p>
        </div>
        <div class="col-lg-4 mt-5 cart-wrap ftco-animate">
          <div class="cart-total mb-3">
            <h3>Estimate shipping and tax</h3>
            <p>Enter your destination to get a shipping estimate</p>
            <form action="#" class="info">
              <div class="form-group">
                <label for="">Country</label>
                <input
                  type="text"
                  class="form-control text-left px-3"
                  placeholder=""
                />
              </div>
              <div class="form-group">
                <label for="country">State/Province</label>
                <input
                  type="text"
                  class="form-control text-left px-3"
                  placeholder=""
                />
              </div>
              <div class="form-group">
                <label for="country">Zip/Postal Code</label>
                <input
                  type="text"
                  class="form-control text-left px-3"
                  placeholder=""
                />
              </div>
            </form>
          </div>
          <p><a
              href="checkout.html"
              class="btn btn-primary py-3 px-4"
            >Estimate</a></p>
        </div>
        <div class="col-lg-4 mt-5 cart-wrap ftco-animate">
          <div class="cart-total mb-3">
            <h3>Cart Totals</h3>
            <p class="d-flex">
              <span>Subtotal</span>
              <span id="subTot" >&#x20B9;{{subPrice}}</span>
            </p>
            <p class="d-flex">
              <span>Delivery</span>
              <span>{{deliveryCharge}}</span>
            </p>
            <p class="d-flex">
              <span>Discount</span>
              <span>{{discount}}</span>
            </p>
            <hr />
            <p class="d-flex total-price">
              <span>Payable</span>
              <span id="grandTotal" >&#x20B9;{{grandTotal}}</span>
            </p>
          </div>
 
          <p><a onclick="proceedPay('{{grandTotal}}','{{subPrice}}',{{deliveryCharge}})"   class="btn btn-primary py-3 px-4">Proceed to
              Checkout</a></p>  
        </div>
      </div>
    </div>
  </section>

