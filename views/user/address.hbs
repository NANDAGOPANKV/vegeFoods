<div class="container">
  <div class="row justify-content-center p-3">
    <div class="col-lg-8">

      <div class="form-group">
        <label for="inputFullName">Full Name</label>
        {{!  name, phone, address, city, state, postalCode, country }}
        <input
          name="name"
          type="text"
          class="form-control"
          id="inputFullName"
          value="{{name}}"
          placeholder="Enter your full name"
        />
      </div>
      <div class="form-group">
        <label for="inputPhoneNumber">Phone</label>
        <input
          name="phone"
          type="text"
          class="form-control"
          id="inputPhoneNumber"
          value="{{phone}}"
          placeholder="Enter your phone number"
        />
      </div>
      <div class="form-group">
        <label for="inputAddressLine1">Address</label>
        <input
          name="address"
          type="text"
          class="form-control"
          id="inputAddressLine1"
          value="{{address}}"
          placeholder="Enter your address line 1"
        />
      </div>
      <div class="form-group">
        <label for="inputCity">City</label>
        <input
          name="city"
          type="text"
          class="form-control"
          id="inputCity"
          value="{{city}}"
          placeholder="Enter your city"
        />
      </div>
      <div class="form-group">
        <label for="inputState">State</label>
        <input
          name="state"
          type="text"
          class="form-control"
          id="inputState"
          value="{{state}}"
          placeholder="Enter your state"
        />
      </div>
      <div class="form-group">
        <label for="inputPostalCode">Postal Code</label>
        <input
          name="postalCode"
          type="text"
          class="form-control"
          id="inputPostalCode"
          value="{{postalCode}}"
          placeholder="Enter your postal code"
        />
      </div>
      <div class="form-group">
        <label for="inputCountry">Country</label>
        <input
          name="country"
          type="text"
          class="form-control"
          id="inputCountry"
          value="{{country}}"
          placeholder="Enter your country"
        />
      </div>
      <div class="w-100 h-25">
      </div>
    </div>
    <div class="col-lg-4">
      <button
        onclick="location.href='/createAddress'"
        type="submit"
        class="btn btn-primary"
      >Create Another Address</button>
    </div>
  </div>
</div>
