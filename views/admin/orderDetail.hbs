            <!-- Sale & Revenue Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            {{!-- card --}}
                            <div class="w-100   p-3 " >
                                <div class="w-100 h-50   d-flex flex-row">
                                <div class="w-50 h-50 m-1 p-3" >
                                 <span class="p-3">User</span>
                                    <h5>name: {{name}}</h5> 
                                    <p>id: {{_id}}</p>
                                    <p>email: {{email}}</p>
                                    <p>number: {{phone}}</p>
                                     
                                </div>
                                <div class="w-50 h-50 m-1" >
                                 <span class="p-3">Delivery Address</span>
                                    <h5>name: {{name}}</h5>
                                    <p>number: {{phone}}</p>
                                    <p>id: {{_id}}</p>
                                    <p>Oder date: {{date}}</p>
                                    <p>payment Method: {{paymentMethod}}</p>
                                    <p>address: {{address}}</p>
                                    <div>
                                        <form action="/status" method="post">
                                        <select class="form-select form-select-sm"  name="status" aria-label=".form-select-sm example" style="width: 100%;height:38px; border-color:gray; border-radius: 3px">
                                        <option value="{{orderStatus}}">{{orderStatus}}</option>
                                        <option value="ordered">ordered</option>
                                        <option value="shipped">shipped</option>
                                        <option value="delivered">delivered</option>
                                        </select>
                                         <input type="hidden" name="id" value="{{_id}}">
                                        <input type="submit" class="btn btn-primary m-2">
                                        </form>
                                    </div>
                                </div>
                                </div>
                                <div class="w-100 h-50 ">
                                  
                                      <!-- Sale & Revenue Start -->
            <div class="container-fluid pt-4 px-4">
